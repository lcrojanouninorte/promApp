<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" 
     >

    <ImageView
        android:id="@+id/imageEstado"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="30dp"
        android:src="@drawable/enprogreso" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="nombre nota"
            android:ems="10" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/nota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="nota"
            android:ems="10" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/porcentaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="porcentaje"
            android:ems="10" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>

    <ToggleButton
        android:id="@+id/toggle_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Nota en Progreso?"
        android:textOff="Nota Final?"
        android:text="ToggleButton" />
        
</LinearLayout>